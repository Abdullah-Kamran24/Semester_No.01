#include <stdio.h>
#include <math.h>

int coordinate(double x1, double y1, double x2, double y2){
    double distance;
    distance = sqrt(pow(x2 - x1, 2) + pow(y2 - y1, 2));
}

int main(){
    double x[10];
    double y[10];
    double total_distance= 0.0;
int i;
    for( i = 0; i < 10 ; i++){
        printf("Enter x and y coordinate for point %d: ", i+1);
    scanf("%lf%lf",&x[i],&y[i]);
}

for(i = 0; i < 9; i++){
total_distance += coordinate(x[i], y[i], x[i+1], y[i+1]);
}

printf("the total distance  from the first point to the last point: %.2lf",total_distance );

return 0;
}



